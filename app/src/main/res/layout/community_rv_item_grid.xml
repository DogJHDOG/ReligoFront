<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:background="@drawable/community_list_grid"
    android:layout_height="150dp">
    <TextView
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/community_rv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="제목입니당"/>

    <TextView
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/community_rv_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:text="테스트용 텍스트입니다.테스트용 텍스트입니다.테스트용 텍스트입니다.테스트용 텍스트입니다.테스트용 텍스트입니다."
        android:textSize="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/community_rv_detail_title" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/community_detail_writer"
        app:layout_constraintTop_toBottomOf="@+id/community_rv_detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/community_detail_writer_name"
            android:layout_width="wrap_content"
            android:text="캐시"
            android:textSize="5sp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3시간 전"
            android:textSize="5sp"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/community_detail_writer"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noto_left_speech_bubble" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="10"
            android:textSize="5sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/mdi_cards_heart_outline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3"
            android:textSize="5sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>