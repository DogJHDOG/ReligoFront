<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/home_event_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_event_img"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/home_event_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_event_demo_img"
        app:layout_constraintTop_toTopOf="@+id/home_event_image_layout"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/home_event_image_layout"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/home_event_name"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@+id/home_event_image_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_medium"
        android:textStyle="bold"
        android:text="부활절 행사"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/home_event_church_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목동교회"
        app:layout_constraintLeft_toRightOf="@+id/home_event_image_layout"
        app:layout_constraintTop_toBottomOf="@+id/home_event_name"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/pretendard_regular"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:id="@+id/location_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_location_picker"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/home_event_church_name"
        app:layout_constraintLeft_toRightOf="@+id/home_event_image_layout"
        android:layout_marginStart="10dp"/>
    
    <TextView
        android:id="@+id/home_event_location"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울특별시 양천 목동 중앙본로  51-16"
        android:textSize="10sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@+id/home_event_church_name"
        app:layout_constraintLeft_toRightOf="@+id/location_picker"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_event_viewmore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>