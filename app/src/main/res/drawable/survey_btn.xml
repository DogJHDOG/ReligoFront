<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 버튼 안눌렀을때 -->
    <item android:state_pressed="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- 테두리 내부 색상 설정 -->
            <solid
                android:color="#FFFFFF" />

            <!-- 테두리 내부 여백 설정
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" /> -->

            <!-- 테두리 radius -->
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />

            <!-- 테두리 설정: 두께, 색상 -->

            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

        </shape>
    </item>

    <!-- 버튼을 눌렀을 경우 -->
    <item android:state_pressed="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <!-- 테두리 내부 색상 설정 -->
            <solid
                android:color="#FFFFFF" />

            <!-- 테두리 내부 여백 설정
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" /> -->

            <!-- 테두리 radius -->
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />

            <!-- 테두리 설정: 두께, 색상 -->

            <stroke
                android:width="3dp"
                android:color="#B393F6" />

        </shape>
    </item>

</selector>
